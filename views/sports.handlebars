{{!-- Creating Expression that allows any created sports event to be transfer through this Sports Handlebar --}}
{{!-- <div class="sportingEventsText"><h2>"This sport is:" {{sport_events.0.sports.name}}</h2></div> --}}
<div class="sportingEventInfo">
<div><h2 class="infoText">Events for: {{sport_events.0.sport.name}}</h2></div>
<div><h2 class="infoText"> Description: {{sport_events.0.sport.description}}</h2></div>
<div><h2 class="infoText"> Required Participants: {{sport_events.0.sport.requiredParticipants}}</h2></div>
</div>
<div>
    {{#each sport_events}}
    {{> event-details}}
    {{/each}}
</div>